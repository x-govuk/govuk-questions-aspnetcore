<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <Description>Tools for implementing the question pages pattern in ASP.NET Core.</Description>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <NoDefaultLaunchSettingsFile>true</NoDefaultLaunchSettingsFile>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.VisualStudio.Threading.Analyzers" Version="17.13.61">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="UUID" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="GovUk.Questions.AspNetCore.Testing" />
    <InternalsVisibleTo Include="GovUk.Questions.AspNetCore.Testing.Tests" />
    <InternalsVisibleTo Include="GovUk.Questions.AspNetCore.Tests" />
  </ItemGroup>

</Project>
